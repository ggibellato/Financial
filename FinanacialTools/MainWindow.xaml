<Window x:Class="SharesDividendCheck.MainWindow"
        x:Name="root"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SharesDividendCheck.Components"
        mc:Ignorable="d"
        Title="Financial tools" Height="800" Width="1200">
    <Grid>
        <TabControl SelectedIndex="0" Grid.ColumnSpan="2">
            <!-- NEW: Navigation Tab (Default) -->
            <TabItem Header="Portfolio Navigator">
                <local:NavigationView DataContext="{Binding ElementName=root, Path=NavigationViewModel}"/>
            </TabItem>
            
            <TabItem Header="Shares Dividend check">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header Section -->
                        <TextBlock Grid.Row="0" 
                                   Text="Shares Dividend Check" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="#333333"
                                   Margin="0,0,0,20"/>

                        <!-- Search Section -->
                        <Border Grid.Row="1" 
                                BorderBrush="#CCCCCC" 
                                BorderThickness="1" 
                                Padding="15"
                                Margin="0,0,0,20"
                                Background="#FAFAFA">
                            <StackPanel>
                                <TextBlock Text="Select Ticker" 
                                           FontSize="14" 
                                           FontWeight="Bold" 
                                           Foreground="#333333"
                                           Margin="0,0,0,8"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ComboBox x:Name="txtTicker" 
                                              Grid.Column="0"
                                              DisplayMemberPath="Name" 
                                              IsEditable="True"
                                              ItemsSource="{Binding}" 
                                              SelectedIndex="0"
                                              Height="32"
                                              VerticalContentAlignment="Center"
                                              Padding="8,0">
                                        <ComboBox.GroupStyle>
                                            <GroupStyle>
                                                <GroupStyle.HeaderTemplate>
                                                    <DataTemplate>
                                                        <Border BorderBrush="#CCCCCC" BorderThickness="0,0,0,1" Padding="5">
                                                            <TextBlock FontWeight="Bold" Text="{Binding Name}" Foreground="#666666"/>
                                                        </Border>
                                                    </DataTemplate>
                                                </GroupStyle.HeaderTemplate>
                                            </GroupStyle>
                                        </ComboBox.GroupStyle>
                                    </ComboBox>
                                    <Button x:Name="btnCheck" 
                                            Grid.Column="2"
                                            Content="Check" 
                                            Click="btnCheck_Click" 
                                            Width="100"
                                            Height="32"
                                            Background="#007ACC"
                                            Foreground="White"
                                            FontWeight="Bold"
                                            BorderThickness="0"
                                            Cursor="Hand">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Background" Value="#007ACC"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" 
                                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                                    CornerRadius="3"
                                                                    Padding="8,4">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#005A9E"/>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter Property="Background" Value="#004578"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Results Section -->
                        <Border Grid.Row="2" 
                                BorderBrush="#CCCCCC" 
                                BorderThickness="1" 
                                Padding="15"
                                Margin="0,0,0,20">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Asset Name -->
                                <TextBlock x:Name="lblName" 
                                           Grid.Row="0"
                                           Text="Select a ticker and click Check" 
                                           FontSize="18" 
                                           FontWeight="Bold" 
                                           Foreground="#333333"
                                           Margin="0,0,0,10"/>

                                <!-- Current Price -->
                                <TextBlock x:Name="lblPrice" 
                                           Grid.Row="1"
                                           Text="Current price: --" 
                                           FontSize="14"
                                           Margin="0,0,0,5"/>

                                <!-- Average Dividend -->
                                <TextBlock x:Name="lblAverageDividend" 
                                           Grid.Row="2"
                                           Text="Average Dividend: --" 
                                           FontSize="14"
                                           Foreground="Blue"
                                           Margin="0,0,0,5"/>

                                <!-- Max Price -->
                                <TextBlock x:Name="lblPriceMax" 
                                           Grid.Row="3"
                                           Text="Price max buy: --" 
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Margin="0,0,0,0"/>
                            </Grid>
                        </Border>

                        <!-- Dividend History Section -->
                        <Grid Grid.Row="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" MinWidth="300"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*" MinWidth="200"/>
                            </Grid.ColumnDefinitions>

                            <!-- Dividends Information -->
                            <Border Grid.Column="0" 
                                    BorderBrush="#CCCCCC" 
                                    BorderThickness="1"
                                    Padding="15">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" 
                                               Text="Dividend History" 
                                               FontSize="16" 
                                               FontWeight="Bold" 
                                               Foreground="#333333"
                                               Margin="0,0,0,10"/>
                                    <DataGrid Grid.Row="1"
                                              Name="dividendDataGrid" 
                                              AutoGenerateColumns="True" 
                                              AutoGeneratingColumn="DividendDataGrid_AutoGeneratingColumn" 
                                              FontSize="13" 
                                              AlternatingRowBackground="#F5F5F5"
                                              IsReadOnly="True"
                                              HeadersVisibility="Column"
                                              GridLinesVisibility="Horizontal"
                                              BorderBrush="#CCCCCC"
                                              BorderThickness="1">
                                        <DataGrid.ColumnHeaderStyle>
                                            <Style TargetType="DataGridColumnHeader">
                                                <Setter Property="Background" Value="#F0F0F0"/>
                                                <Setter Property="Foreground" Value="#333333"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                                <Setter Property="Padding" Value="8"/>
                                                <Setter Property="BorderBrush" Value="#CCCCCC"/>
                                                <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                            </Style>
                                        </DataGrid.ColumnHeaderStyle>
                                        <DataGrid.RowStyle>
                                            <Style TargetType="DataGridRow">
                                                <Setter Property="Background" Value="White"/>
                                                <Style.Triggers>
                                                    <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                                        <Setter Property="Background" Value="#F5F5F5"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                                <!-- Keep selection color when control loses focus -->
                                                <Style.Resources>
                                                    <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="#007ACC"/>
                                                    <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}" Color="White"/>
                                                </Style.Resources>
                                            </Style>
                                        </DataGrid.RowStyle>
                                    </DataGrid>
                                </Grid>
                            </Border>

                            <!-- By Year -->
                            <Border Grid.Column="2" 
                                    BorderBrush="#CCCCCC" 
                                    BorderThickness="1"
                                    Padding="15">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" 
                                               Text="By Year" 
                                               FontSize="16" 
                                               FontWeight="Bold" 
                                               Foreground="#333333"
                                               Margin="0,0,0,10"/>
                                    <DataGrid Grid.Row="1"
                                              Name="dividendByYearDataGrid" 
                                              AutoGenerateColumns="True" 
                                              FontSize="13" 
                                              AlternatingRowBackground="#F5F5F5"
                                              IsReadOnly="True"
                                              HeadersVisibility="Column"
                                              GridLinesVisibility="Horizontal"
                                              BorderBrush="#CCCCCC"
                                              BorderThickness="1">
                                        <DataGrid.ColumnHeaderStyle>
                                            <Style TargetType="DataGridColumnHeader">
                                                <Setter Property="Background" Value="#F0F0F0"/>
                                                <Setter Property="Foreground" Value="#333333"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                                <Setter Property="Padding" Value="8"/>
                                                <Setter Property="BorderBrush" Value="#CCCCCC"/>
                                                <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                            </Style>
                                        </DataGrid.ColumnHeaderStyle>
                                        <DataGrid.RowStyle>
                                            <Style TargetType="DataGridRow">
                                                <Setter Property="Background" Value="White"/>
                                                <Style.Triggers>
                                                    <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                                        <Setter Property="Background" Value="#F5F5F5"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                                <!-- Keep selection color when control loses focus -->
                                                <Style.Resources>
                                                    <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="#007ACC"/>
                                                    <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}" Color="White"/>
                                                </Style.Resources>
                                            </Style>
                                        </DataGrid.RowStyle>
                                    </DataGrid>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Read FIIs current values">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header Section -->
                        <TextBlock Grid.Row="0" 
                                   Text="Read FIIs Current Values" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="#333333"
                                   Margin="0,0,0,20"/>

                        <!-- Action Button -->
                        <Border Grid.Row="1" 
                                BorderBrush="#CCCCCC" 
                                BorderThickness="1" 
                                Padding="15"
                                Margin="0,0,0,20"
                                Background="#FAFAFA">
                            <StackPanel>
                                <TextBlock Text="Fetch Current Prices" 
                                           FontSize="14" 
                                           FontWeight="Bold" 
                                           Foreground="#333333"
                                           Margin="0,0,0,8"/>
                                <Button x:Name="btnCheckFIIS" 
                                        Content="Check Prices" 
                                        Click="btnCheckFIIS_Click" 
                                        Width="150"
                                        Height="32"
                                        HorizontalAlignment="Left"
                                        Background="#007ACC"
                                        Foreground="White"
                                        FontWeight="Bold"
                                        BorderThickness="0"
                                        Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="#007ACC"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                CornerRadius="3"
                                                                Padding="8,4">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#005A9E"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#004578"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </Border>

                        <!-- Data Grid Section -->
                        <Border Grid.Row="2" 
                                BorderBrush="#CCCCCC" 
                                BorderThickness="1"
                                Padding="15">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" 
                                           Text="FIIs Current Prices" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Foreground="#333333"
                                           Margin="0,0,0,10"/>
                                <DataGrid Grid.Row="1"
                                          Name="fiisPriceDataGrid" 
                                          AutoGenerateColumns="False" 
                                          FontSize="13" 
                                          AlternatingRowBackground="#F5F5F5"
                                          IsReadOnly="True"
                                          HeadersVisibility="Column"
                                          GridLinesVisibility="Horizontal"
                                          BorderBrush="#CCCCCC"
                                          BorderThickness="1">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Binding="{Binding Ticker}" 
                                                            Header="Ticker" 
                                                            Width="100">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Padding" Value="8"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Binding="{Binding Name}" 
                                                            Header="Name" 
                                                            Width="*">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Padding" Value="8"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Binding="{Binding Price, StringFormat=N2}" 
                                                            Header="Price" 
                                                            Width="120">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                                    <Setter Property="Padding" Value="8"/>
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                    <Setter Property="Foreground" Value="Green"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                    </DataGrid.Columns>
                                    <DataGrid.ColumnHeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="#F0F0F0"/>
                                            <Setter Property="Foreground" Value="#333333"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="Padding" Value="8"/>
                                            <Setter Property="BorderBrush" Value="#CCCCCC"/>
                                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                        </Style>
                                    </DataGrid.ColumnHeaderStyle>
                                    <DataGrid.RowStyle>
                                        <Style TargetType="DataGridRow">
                                            <Setter Property="Background" Value="White"/>
                                            <Style.Triggers>
                                                <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                                    <Setter Property="Background" Value="#F5F5F5"/>
                                                </Trigger>
                                            </Style.Triggers>
                                            <!-- Keep selection color when control loses focus -->
                                            <Style.Resources>
                                                <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="#007ACC"/>
                                                <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}" Color="White"/>
                                            </Style.Resources>
                                        </Style>
                                    </DataGrid.RowStyle>
                                </DataGrid>
                            </Grid>
                        </Border>
                    </Grid>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>

</Window>

    